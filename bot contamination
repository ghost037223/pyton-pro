import discord
 
La variable intents almacena los privilegios del bot,
intents = discord.Intents.default()
Activar el privilegio de lectura de mensajes,
intents.message_content = True
Crear un bot en la variable cliente y transferirle los privilegios,
client = discord.Client(intents=intents)
 
@client.event
async def on_ready():
    print(f'Hemos iniciado sesi√≥n como {client.user}')
 
@client.event
async def on_message(message):
    if message.author == client.user:
        return
    if message.content.startswith('hola'):
        await message.channel.send("hola")
    elif message.content.startswith("me puedes dicir como no contaminar el mundo"):
        await message.channel.send("bueno si no quieres contaminar el mundo nesecitas no gastar agua no gastar comia no quiarar basura en la calle")








    if message.author == client.user:
        return
    if message.content.startswith('ok gracias'):
        await message.channel.send(" no hay problema")
    elif message.content.startswith("me das otra forma en como no contaminar el mundo"):
    elif message.content.startswith("1 usa menos el carro  2  reusar bolsas y bottelas"):
      await message.channel.send("ahh ok gracias")
    elif message.content.startswith("no hay problema"):
